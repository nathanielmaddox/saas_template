GOOGLE_AI_PROJECT_ID=your_google_project_id

# Cohere
COHERE_API_KEY=your_cohere_api_key

# Together AI
TOGETHER_API_KEY=your_together_api_key

# Hugging Face
HUGGINGFACE_API_KEY=your_huggingface_api_key

# =======================
# DATABASE PROVIDERS
# =======================
# Supabase (PostgreSQL with Auth)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_DB_SCHEMA=public
SUPABASE_REDIRECT_URL=http://localhost:3000/auth/callback
SUPABASE_AUTH_FLOW_TYPE=pkce

# InstantDB (Real-time database)
INSTANTDB_APP_ID=your_instantdb_app_id
INSTANTDB_API_URL=https://api.instantdb.com
INSTANTDB_WEBSOCKET_URL=wss://api.instantdb.com

# PostgreSQL (Direct connection)
DATABASE_URL=postgresql://user:pass@host:port/db
DATABASE_MAX_CONNECTIONS=20
DATABASE_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=10000

# Prisma (ORM)
PRISMA_DATABASE_URL=postgresql://user:pass@host:port/db

# Xano Configuration (Enhanced)
XANO_TIMEOUT=15000
XANO_RETRIES=3
XANO_RETRY_DELAY=1000

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# =======================
# DEVELOPMENT TOOLS
# =======================
# Ngrok for local webhook testing
NGROK_AUTH_TOKEN=your_ngrok_auth_token

# =======================
# MULTI-TENANT DOMAIN CONFIG
# =======================
# Domain Configuration for Multi-tenant Setup
NEXT_PUBLIC_ROOT_DOMAIN=localhost:3000
NEXT_PUBLIC_PROD_DOMAIN=yoursaas.com

# DNS Configuration for Domain Verification
NEXT_PUBLIC_CNAME_TARGET=cname.yoursaas.com
NEXT_PUBLIC_A_RECORD=192.168.1.1

# Allowed Origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://yoursaas.com,https://*.yoursaas.com

# SSL Certificate Provider (optional)
SSL_PROVIDER=cloudflare
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# =======================
# FEATURE FLAGS
# =======================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT_SUPPORT=false
NEXT_PUBLIC_MAINTENANCE_MODE=false
NEXT_PUBLIC_ENABLE_MULTI_TENANT=true
NEXT_PUBLIC_ENABLE_CUSTOM_DOMAINS=true
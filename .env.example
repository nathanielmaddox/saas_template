# OpenPhone
OPENPHONE_API_TOKEN=your_openphone_api_token
OPENPHONE_PHONE_NUMBER=+1234567890

# Slack Integration
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
